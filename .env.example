# Pusher Configuration (Client-side)
VITE_PUSHER_APP_KEY=your_pusher_app_key_here
VITE_PUSHER_CLUSTER=us2

# Pusher Configuration (Server-side - Netlify Functions only)
PUSHER_APP_ID=your_pusher_app_id_here
PUSHER_SECRET=your_pusher_secret_here

# Portkey API (for AI transcription and summarization)
PORTKEY_API_KEY=your_portkey_api_key_here

# Deepgram API (for audio transcription)
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# ============================================
# EMAIL CONFIGURATION
# ============================================
# IMPORTANT: Choose ONE of the two modes below:
#
# DEVELOPMENT MODE (Default - Recommended for local development):
#   - Set ENABLE_DEV_MODE_EMAIL_MOCK=true
#   - Verification codes appear in browser console
#   - Summary emails logged to server console
#   - No external email service needed
#   - Good for testing without SendGrid account
#
# PRODUCTION MODE (Real email via SendGrid):
#   - Set ENABLE_DEV_MODE_EMAIL_MOCK=false
#   - Set SENDGRID_API_KEY with real API key
#   - Set SENDGRID_FROM_EMAIL with verified sender email
#   - Emails actually sent to recipients
#
# To use SendGrid (production):
#   1. Create account at https://sendgrid.com
#   2. Get API key from https://app.sendgrid.com/settings/api_keys
#   3. Verify sender email at https://app.sendgrid.com/settings/sender_auth/senders
#   4. Set the values below and set ENABLE_DEV_MODE_EMAIL_MOCK=false

# Enable development mock email (set to 'false' for production with SendGrid)
ENABLE_DEV_MODE_EMAIL_MOCK=true

# SendGrid Configuration (only needed when ENABLE_DEV_MODE_EMAIL_MOCK=false)
# SENDGRID_API_KEY=your_sendgrid_api_key_here
# SENDGRID_FROM_EMAIL=your-verified-email@example.com
# SENDGRID_FROM_NAME=Standup Bot

# Session Security
SESSION_SECRET=your_random_32_char_secret_here

# Upstash Redis (for Phase 4: Backend Session Storage)
# Get credentials from: https://console.upstash.com/
UPSTASH_REDIS_REST_URL=https://your-namespace.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_rest_token_here
UPSTASH_REDIS_TIMEOUT_MS=5000

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
